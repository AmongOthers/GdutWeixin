@model GdutWeixin.Models.Library.BookInfo

@{
    Layout = null;
}

@{
    ViewBag.Title = "详细信息";
}

<!DOCTYPE html>
<html lang="zh">
    <head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        @Styles.Render("~/Content/mobileCss")
		<style>
			.available {
				color: green;
			}

			.lent {
				color: red;
			}

			.readonly {
				color: gray;
			}
		</style>
    </head>
	<body>
        <div data-role="page">
            <div data-role="header" data-position="fixed" data-tap-toggle="false" data-theme="b">
				<h1>@ViewBag.Title</h1>
			</div>
            <div data-role="content" data-theme="b">
				<div>
					<div data-role="collapsible-set">

						<div data-role="collapsible" data-collapsed="false" class="bookBasicInfo">
							<h3>基本信息</h3>
								<ul>
									<li><span>标题:</span><span>@Model.CardInfo.Title</span></li>
									<li><span>作者:</span><span>@Model.CardInfo.Author</span></li>
									<li><span>出版社:</span><span>@Model.CardInfo.Publisher</span></li>
									<li><span>ISBN:</span><span>@Model.CardInfo.Isbn</span></li>
								</ul>
						</div>

						<div data-role="collapsible" class="bookContent">
							<h3>内容简介</h3>
							<p>@Model.CardInfo.Content</p>
						</div>

						<div data-role="collapsible">
							<h3>馆藏信息(@Model.DeptInfos[0].Index)</h3>
							<ul data-role="listview" data-inset="true" data-theme="c">
								@foreach (GdutWeixin.Models.Library.DeptInfo deptInfo in @Model.DeptInfos)
								{
									<li>
										<div>@deptInfo.DeptPlace</div>
										<div class="@deptInfo.StatusCode">@deptInfo.Status</div>
									</li>  
								}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		@Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")
	</body>
</html>
